import { Container, Columns, HTML, Frame, Flex, Media, Stack } from 'lism-css/astro';
import Button from '@/components/ex/Button/index.astro';
import './_style.css';
---

<DemoPageLayout title='Section013'>
	<Container isWrapper='l' bgc='gray' py='50' hasGutter>
		<Columns cols={[1, null, 3]} g={['30', null, '40']} c='white'>
			<Stack g='30'>
				<HTML.h lv='2' class='u-trim' fz='5xl' ff='accent' fs='italic' fw='black' lts='l'>Feature</HTML.h>
