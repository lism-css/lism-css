---
/**
 * 未翻訳ページの注意書きコンポーネント
 * 非root言語でフォールバック表示される場合に、冒頭に表示する
 */
import { Lism, Icon } from 'lism-css/astro';
import { t, type LangCode } from '@/lib/i18n';

interface Props {
	lang: LangCode;
}

const { lang } = Astro.props;
const message = t(lang, 'translationNotice');
---

<Lism class="c--translationNotice u-cbox" keycolor="yellow" p="20" bdrs="10" bd>
	<Lism layout="flex" ai="center" g="10" fw="bold">
		<Icon icon="warning" fz="l" c="keycolor" />
		{message.title}
	</Lism>
	<Lism fz="s" my-s="5">
		{message.description}
	</Lism>
</Lism>
