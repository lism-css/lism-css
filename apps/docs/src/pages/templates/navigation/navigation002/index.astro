---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';

import { Container, Flex, Grid, Icon, LinkBox, Stack, HTML } from 'lism-css/astro';
import './_style.css';
---

<DemoPageLayout title='Navigation001'>
	<Container size='l' bgc='base' py='60' hasGutter>
		<Grid gtc={['auto', null, 'auto 1fr']} g='60'>
			<Stack ai='flex-s' g='40'>
				<HTML.p class='u-trim' fz='2xl' fw='bold' ta='center'>製品カテゴリー</HTML.p>
				<HTML.p class='u-trim' fz='s' o='mild'>気になるカテゴリーから探せます</HTML.p>
			</Stack>
			<Stack g='50'>
				<Grid gtc='repeat(auto-fit, minmax(250px, 1fr))' g='0 50'>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>キッチン家電</HTML.p>
						<Flex ai='center' jc='center' bgc='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>オーディオ</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>生活家電</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>冷蔵庫</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>洗濯機・衣類ケア</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>美容</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>照明器具</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
					<LinkBox href='#' layout='flex' g='40' ai='center' jc='between' p='40 10' bd-t bdc='line'>
						<HTML.p class='u-trim' fz='m' fw='bold'>パソコン・周辺機器</HTML.p>
						<Flex ai='center' jc='center' bg='black' bdrs='99' p='5'>
							<Icon icon='caret-right' fz='xs' c='white' />
						</Flex>
					</LinkBox>
				</Grid>
				<Flex jc='flex-e'>
					<LinkBox href='#' layout='flex' ai='center' g='10'>
						<HTML.p class='u-trim'>全てのカテゴリーを見る</HTML.p>
						<Icon icon='arrow-right' />
					</LinkBox>
				</Flex>
			</Stack>
		</Grid>
	</Container>
</DemoPageLayout>
