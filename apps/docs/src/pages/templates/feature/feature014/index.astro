---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';

import { Container, Flex, Frame, Grid, Icon, Layer, LinkBox, Media, Stack, Text } from 'lism-css/astro';
import './_style.css';
---

<DemoPageLayout title='Feature014'>
	<Container size='l' bgc='base' py='60' hasGutter>
		<Grid gtc={['repeat(2, 1fr)', 'repeat(3, 1fr)', 'repeat(4, 1fr)']} gtr={['repeat(4, 1fr)', 'repeat(3, 1fr)']} g='30'>
			<LinkBox
				href='#'
				gr={['1 / span 2', null, '1 / span 3']}
				gc={['1 / -1', '1 / span 2']}
				pos='r'
				ov='hidden'
				bdrs='30'
				bxsh='20'
				hasTransition
				hasHover
			>
				<Frame isLayer>
					<Media src='/img/img-5.jpg' alt='' width='960' height='640' hasTransition hov='get:zoom' />
				</Frame>
				<Layer bgc='black:20%' />
				<Grid gtr='auto auto' gtc='auto' p='40' h='100%' pos='r'>
					<Stack pos='r' g='30' c='white' pbs='20' pb='50'>
						<Text class='u--trimHL' fz='2xl' fw='bold'>黄昏の刻</Text>
						<Text class='u--trimHL' fz='s' op='high'>豆本来の豊かな香りを、最大限に引き出す。</Text>
					</Stack>
					<Flex ai='c' jc='fe' c='white' mbs='auto' g='30'>
						<Text>View More</Text>
						<Stack p='20' bd bdrs='99' hasTransition hov='get:bgcWhite'>
							<Icon icon='arrow-right' fz='m' hov='get:cBlack' />
						</Stack>
					</Flex>
				</Grid>
			</LinkBox>
			<LinkBox
				href='#'
				gr={['3', '1 / span 2', '1 / span 3']}
				gc={['1 / -1', '3']}
				pos='r'
				ov='hidden'
				bdrs='30'
				bxsh='20'
				hasTransition
				hasHover
			>
				<Frame isLayer>
					<Media src='/img/img-4.jpg' alt='' width='960' height='640' hasTransition hov='get:zoom' />
				</Frame>
				<Layer bgc='black:20%' />
				<Grid gtr='auto auto' gtc='auto' p='40' h='100%' pos='r'>
					<Stack pos='r' g='30' c='white' pbs='20' pb='50'>
						<Text class='u--trimHL' fz='2xl' fw='bold'>静寂の朝</Text>
						<Text class='u--trimHL' fz='s' op='high'>究極の食感を生み出す、スチームテクノロジー。</Text>
					</Stack>
					<Flex ai='c' jc='fe' c='white' mbs='auto' g='30'>
						<Text>View More</Text>
						<Stack p='20' bd bdrs='99' hasTransition hov='get:bgcWhite'>
							<Icon icon='arrow-right' fz='m' hov='get:cBlack' />
						</Stack>
					</Flex>
				</Grid>
			</LinkBox>
			<LinkBox href='#' gr={['4', '3', '1 / span 1']} gc={['1', null, '4']} pos='r' ov='hidden' bdrs='30' bxsh='20' hasTransition hasHover>
				<Frame isLayer>
					<Media src='/img/img-1.jpg' alt='' width='960' height='640' hasTransition hov='get:zoom' />
				</Frame>
				<Layer bgc='black:20%' />
				<Grid gtr='auto auto' gtc='auto' p='40' h='100%' pos='r'>
					<Stack pos='r' g='30' c='white' pbs='20' pb='50'>
						<Text class='u--trimHL' fz='2xl' fw='bold'>一滴の雫</Text>
						<Text class='u--trimHL' fz='s' op='high'>思い通りの湯量を注げる、計算された注ぎ口。</Text>
					</Stack>
					<Flex ai='c' jc='fe' c='white' mbs='auto' g='30'>
						<Text>View More</Text>
						<Stack p='20' bd bdrs='99' hasTransition hov='get:bgcWhite'>
							<Icon icon='arrow-right' fz='m' hov='get:cBlack' />
						</Stack>
					</Flex>
				</Grid>
			</LinkBox>
			<LinkBox
				href='#'
				gr={['4', '3', '2 / span 2']}
				gc={['2', '2 / span 2', '4']}
				pos='r'
				ov='hidden'
				bdrs='30'
				bxsh='20'
				hasTransition
				hasHover
			>
				<Frame isLayer>
					<Media src='/img/img-2.jpg' alt='' width='960' height='640' hasTransition hov='get:zoom' />
				</Frame>
				<Layer bgc='black:20%' />
				<Grid gtr='auto auto' gtc='auto' p='40' h='100%' pos='r'>
					<Stack pos='r' g='30' c='white' pbs='20' pb='50'>
						<Text class='u--trimHL' fz='2xl' fw='bold'>森の吐息</Text>
						<Text class='u--trimHL' fz='s' op='high'>部屋の隅々まで、きれいな空気を静かに届ける。</Text>
					</Stack>
					<Flex ai='c' jc='fe' c='white' mbs='auto' g='30'>
						<Text>View More</Text>
						<Stack p='20' bd bdrs='99' hasTransition hov='get:bgcWhite'>
							<Icon icon='arrow-right' fz='m' hov='get:cBlack' />
						</Stack>
					</Flex>
				</Grid>
			</LinkBox>
		</Grid>
	</Container>
</DemoPageLayout>

<style>
	@media (any-hover: hover) {
		.-hov\:get\:zoom {
			scale: var(--_isHov, 1.1);
		}
		.-hov\:get\:bgcWhite {
			background-color: var(--_isHov, var(--white));
		}
		.-hov\:get\:cBlack {
			color: var(--_isHov, var(--black));
		}
	}
</style>
