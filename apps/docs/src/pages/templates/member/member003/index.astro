---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';

import { Container, Frame, Grid, Media, Stack, Text } from 'lism-css/astro';
import './_style.css';
---

<DemoPageLayout title='Member003'>
	<Container size='l' bgc='base' py='60' hasGutter>
		<Stack g='60'>
			<Text class='u-trim' fz='2xl' fw='bold' ta='center'>スタッフ一覧</Text>
			<Grid gtc='repeat(auto-fit, minmax(150px, 1fr))' g={['50', '60']}>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-1.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<Text class='u-trim' fz='m' fw='bold'>鈴木 太郎</Text>
						<Text class='u-trim' fz='xs' o='mild'>代表取締役 / クリエイティブディレクター</Text>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-2.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<Text class='u-trim' fz='m' fw='bold'>佐藤 美咲</Text>
						<Text class='u-trim' fz='xs' o='mild'>アートディレクター / UI/UXデザイナー</Text>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-3.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<Text class='u-trim' fz='m' fw='bold'>高橋 健太</Text>
						<Text class='u-trim' fz='xs' o='mild'>テクニカルディレクター / リードエンジニア</Text>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-4.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<Text class='u-trim' fz='m' fw='bold'>田中 雄大</Text>
						<Text class='u-trim' fz='xs' o='mild'>Webディレクター / プロジェクトマネージャー</Text>
					</Stack>
				</Stack>
			</Grid>
		</Stack>
	</Container>
</DemoPageLayout>
