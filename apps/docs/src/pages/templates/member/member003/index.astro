---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';

import { Container, Frame, Grid, Media, Stack, HTML } from 'lism-css/astro';
import './_style.css';
---

<DemoPageLayout title='Member003'>
	<Container size='l' bgc='base' py='60' hasGutter>
		<Stack g='60'>
			<HTML.p class='u-trim' fz='2xl' fw='bold' ta='center'>スタッフ一覧</HTML.p>
			<Grid gtc='repeat(auto-fit, minmax(150px, 1fr))' g={['50', '60']}>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-1.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<HTML.p class='u-trim' fz='m' fw='bold'>鈴木 太郎</HTML.p>
						<HTML.p class='u-trim' fz='xs' o='-10'>代表取締役 / クリエイティブディレクター</HTML.p>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-2.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<HTML.p class='u-trim' fz='m' fw='bold'>佐藤 美咲</HTML.p>
						<HTML.p class='u-trim' fz='xs' o='-10'>アートディレクター / UI/UXデザイナー</HTML.p>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-3.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<HTML.p class='u-trim' fz='m' fw='bold'>高橋 健太</HTML.p>
						<HTML.p class='u-trim' fz='xs' o='-10'>テクニカルディレクター / リードエンジニア</HTML.p>
					</Stack>
				</Stack>
				<Stack g='40'>
					<Frame ar='1/1' w='stretch' bdrs='10'>
						<Media src='/img/img-4.jpg' width='960' height='640' />
					</Frame>
					<Stack g='30'>
						<HTML.p class='u-trim' fz='m' fw='bold'>田中 雄大</HTML.p>
						<HTML.p class='u-trim' fz='xs' o='-10'>Webディレクター / プロジェクトマネージャー</HTML.p>
					</Stack>
				</Stack>
			</Grid>
		</Stack>
	</Container>
</DemoPageLayout>
