---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';
import DemoHeader from '../_DemoHeader.astro';
import DemoFooter from '../_DemoFooter.astro';
import DemoContent from '../_DemoContent.astro';
import { Box, Flow, Stack, Container, Dummy, WithSide } from 'lism-css/astro';
---

<DemoPageLayout title='Two Columns Layout'>
	<Stack id='wrap' min-h='100vh'>
		<DemoHeader />
		<Container hasGutter size='m' py='50' fx='1'>
			<WithSide sideW='240px' mainW='40em' g='50'>
				<Container tag='main'>
					<article>
						<header>
							<h1>Page Title</h1>
						</header>
						<Flow my-s='60'>
							<DemoContent />
						</Flow>
						<Box tag='aside' my-s='60'>
							<Box bgc='base-2' p='50'>
								<div>Comment area, etc...</div>
							</Box>
						</Box>
					</article>
				</Container>
				<Container tag='aside' isSide layout='flow'>
					<div>Sidebar contents...</div>
					<Dummy />
				</Container>
			</WithSide>
		</Container>
		<DemoFooter />
	</Stack>
</DemoPageLayout>
