---
import { Container, Lism, Link, Flex, Stack, Center, Icon, Dummy, Text, Modal } from 'lism-css/astro';
---

<Container tag='header' size='m' py='30' hasGutter bxsh='10'>
	<Flex jc='sb' ai='c' g='20'>
		<Lism fz='xl' ff='mono'><a href='/'>Lism CSS</a></Lism>
		<Flex mis='auto' g='20' d={['none', null, 'flex']}>
			<Link href='###' hov='op' px='5' c='inherit' td='n'>Menu 1</Link>
			<Link href='###' hov='op' px='5' c='inherit' td='n'>Menu 2</Link>
			<Link href='###' hov='op' px='5' c='inherit' td='n'>Menu 3</Link>
		</Flex>
		<Center d={['grid', null, 'none']} tag='button' fz='xl' className='re--style' data-modal-open='modal-01'>
			<Icon icon='menu' fz='l' />
		</Center>
	</Flex>
	<Modal.Root id='modal-01' p='40' style={{ '--offset': '0 100px' }}>
		<Modal.Inner maxW='m' m='auto' p='40' g='30' bdrs='20' bxsh='40'>
			<Center pos='a' t='0' r='0' z='1' fz='xl' p='20' m='20' bdrs='99'>
				<Modal.CloseIconBtn modalId='modal-01' />
			</Center>
			<Modal.Header>
				<Text fz='l' fw='bold' lh='s'>Menus</Text>
			</Modal.Header>
			<Modal.Body mbs='20'>
				<Stack g='0' bd-b bdc='line'>
					<Link href='###' p='10' py='20' c='inherit' td='n' bd-t bdc='inherit'>Menu 1</Link>
					<Link href='###' p='10' py='20' c='inherit' td='n' bd-t bdc='inherit'>Menu 2</Link>
					<Link href='###' p='10' py='20' c='inherit' td='n' bd-t bdc='inherit'>Menu 3</Link>
				</Stack>
			</Modal.Body>
			<Modal.Footer d='f' jc='e'>
				<Lism tag='button' data-modal-close='modal-01' bd='none' p='20' lh='xs' bdrs='10'>Close</Lism>
			</Modal.Footer>
		</Modal.Inner>
	</Modal.Root>
</Container>
