---
import { Container, Lism, Link, Flex, Stack, Center, Icon, Dummy, Text, Modal } from 'lism-css/astro';
---

<Container tag='header' size='m' py='30' hasGutter bxsh='10'>
	<Flex jc='between' ai='c' g='20'>
		<Lism fz='xl' ff='mono'><a href='/'>Lism CSS</a></Lism>
		<Flex mx-s='auto' g='20' d={['none', null, 'flex']}>
			<Link href='###' hov='o' px='5' c='inherit' td='none'>Menu 1</Link>
			<Link href='###' hov='o' px='5' c='inherit' td='none'>Menu 2</Link>
			<Link href='###' hov='o' px='5' c='inherit' td='none'>Menu 3</Link>
		</Flex>
		<Center d={['grid', null, 'none']} tag='button' fz='xl' className='re--style' data-modal-open='modal-01'>
			<Icon icon='menu' fz='l' />
		</Center>
	</Flex>
	<Modal.Root id='modal-01' isContainer='s' p='40' style={{ '--offset': '0 100px' }}>
		<Modal.Inner pos='rel' p='40' g='30' bdrs='20' bxsh='40'>
			<Modal.CloseBtn modalId='modal-01' pos='abs' t='0' r='0' z='1' fz='xl' p='20' />
			<Lism>
				<Text fz='l' fw='bold'>Menu</Text>
			</Lism>
			<Modal.Body my-s='20'>
				<Stack bd-y bdc='line' className='u--gridBorder' bdc='line' bd-b p='0'>
					<Link href='###' p='10' py='20' className='u--flatLink'>Menu 1</Link>
					<Link href='###' p='10' py='20' className='u--flatLink'>Menu 2</Link>
					<Link href='###' p='10' py='20' className='u--flatLink'>Menu 3</Link>
				</Stack>
			</Modal.Body>
			<Flex jc='c'>
				<Lism tag='button' data-modal-close='modal-01' bd='none' p='20' lh='xs' bdrs='10'>Close</Lism>
			</Flex>
		</Modal.Inner>
	</Modal.Root>
</Container>
