---
import DemoPageLayout from '~/layouts/DemoPageLayout.astro';
import DemoHeader from '../_DemoHeader.astro';
import DemoFooter from '../_DemoFooter.astro';
import DemoContent from '../_DemoContent.astro';
import { Container, Box, Stack } from 'lism-css/astro';
---

<DemoPageLayout title='One Column Layout'>
	<Stack id='wrap' min-h='100vh'>
		<DemoHeader />
		<Box tag='main' py='50' fx='1'>
			<Box tag='article'>
				<Container size='m' tag='header' hasGutter>
					<h1>Page Title</h1>
				</Container>

				<Container size='m' hasGutter layout='flow' my-s='50'>
					<DemoContent />
				</Container>

				<Container tag='aside' size='m' hasGutter my-s='50'>
					<Box bgc='base-2' p='40'>
						<div>Comment area, etc...</div>
					</Box>
				</Container>
			</Box>
		</Box>
		<DemoFooter />
	</Stack>
</DemoPageLayout>
