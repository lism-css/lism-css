---
import { Flex } from 'lism-css/astro';
import './style.css';

const { layout, ...props } = Astro.props;
const Layout = layout || Flex;

// c--button では c, bgc は 変数で受け取る
const _propConfig = {
	c: { isVar: 1 },
	bgc: { isVar: 1 },
};
---

<Layout lismClass='c--button' tag='a' td='n' ai='c' hov='fade' _propConfig={_propConfig} {...props}>
	<slot />
</Layout>
