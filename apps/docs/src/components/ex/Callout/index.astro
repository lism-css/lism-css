---
import { Lism, WithSide, Center, Icon } from 'lism-css/astro';
import PRESETS from './presets';
import './style.css';

const { type = 'alert', keycolor, icon, isFlow, ...props } = Astro.props;

const presetData = type && PRESETS[type as keyof typeof PRESETS];
const _icon = icon || presetData?.icon || 'info';
const _color = keycolor || presetData?.color || 'currentColor';
---

<WithSide lismClass='c--callout u--cbox' keycolor={_color} ai='center' p='30' g='30' bd bdrs='10' {...props}>
	<Center data-is-side c='keycolor' fz='xl'>
		<Icon icon={_icon} />
	</Center>
	<Lism class='u--trimBox' isFlow={isFlow}>
		<slot />
	</Lism>
</WithSide>
